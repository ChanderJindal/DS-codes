#include <bits/stdc++.h>
#define pb push_back
using namespace std;
int main(){
    cout<<"enter size of a 2D array "<<endl;
    int n,m;
    cin>>n>>m;
    int arr[n][m];
    cout<<"Enter the 2D array"<<endl;
    for(int i = 0;i <n ; i++){
        for(int j = 0 ;j < m ; j++){
            cin>>arr[i][j];}}
    vector <int>row,col,val;
    for(int i = 0;i <n ; i++){
        for(int j = 0 ;j < m ; j++){
            if(arr[i][j] != 0){
                row.pb(i);
                col.pb(j);
                val.pb(arr[i][j]);
            }}}
    cout<<"There are "<<val.size()<<" non-Zero elements in array"<<endl;
    for(int i = 0; i < row.size(); i++){
        cout<<"arr["<<row[i]<<"]["<<col[i]<<"] = "<<val[i]<<endl;}
        cout<<"\n Written by Chander Jindal - 06514802719 "<<endl;
    return 0;
    }
